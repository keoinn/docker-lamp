FROM php:7.4.0alpha2-fpm-stretch

ENV COMPOSER_HOME=/usr/local/composer \
    PATH=/usr/local/composer/vendor/bin:$PATH

COPY fpm/etc/supervisor/conf.d/supervisord.conf /etc/supervisor/conf.d/supervisord.conf
COPY scripts/* /usr/local/bin/

RUN DEBIAN_FRONTEND=noninteractive \
    apt-get -y --force-yes update && \
    apt-get -y --force-yes --no-install-recommends install \
    supervisor \
    cron \
# Composer dependencies:
    openssl \
    zip \
    unzip \
    curl \
    wget \
    git \
    mercurial \
    subversion \
    zlib1g-dev \
    libpng-dev \
    libzip-dev \
    libicu-dev \
# Composer
    && curl -sS https://getcomposer.org/installer | php \
    && mv composer.phar /usr/local/bin/composer \
    && chmod 755 /usr/local/bin/composer \
    && chown www-data:www-data $COMPOSER_HOME \
    && chown www-data:www-data $COMPOSER_HOME -R \
    && chmod 775 $COMPOSER_HOME \
    && chmod 775 $COMPOSER_HOME -R \
    && chmod 775 /usr/local/bin/docker-pcs-php-ext-config \
    && chmod 775 /usr/local/bin/docker-pcs-php-ext-disable \
    && chmod 775 /usr/local/bin/docker-pcs-php-ext-enable \
    && chmod 775 /usr/local/bin/docker-pcs-php-ext-install \
    && chmod 775 /usr/local/bin/docker-pcs-php-restart \
# Cleanup
    && rm -rf /var/lib/apt/lists/*

RUN cp /usr/local/etc/php/php.ini-development /usr/local/etc/php/php.ini && \
    sed -i 's/upload_max_filesize = 2M/upload_max_filesize = 128M/g' /usr/local/etc/php/php.ini && \
    sed -i 's/post_max_size = 8M/post_max_size = 128M/g' /usr/local/etc/php/php.ini

# Ext
RUN apt-get update -y
RUN apt-get install libsodium-dev -y
RUN docker-pcs-php-ext-install gd zip mysqli zip intl
RUN docker-php-ext-install sodium
RUN docker-php-ext-enable intl

CMD ["supervisord", "-c", "/etc/supervisor/supervisord.conf"]

